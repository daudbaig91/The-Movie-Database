<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131B23"
    android:orientation="vertical"
    tools:context=".findmovie">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_sans_libre_light"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:text="Please Select Your Movie: "
        android:textColor="#2274A5"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:gravity="center"
        android:hint="Type here:"
        android:paddingBottom="20dp"
        android:textColor="#F4EFEF"
        android:textColorHighlight="#EBE1E1"
        android:textColorHint="#F7F1F1"
        android:textColorLink="#F4F4F4"
        android:textSize="20sp"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/backbutton2"
            android:fontFamily="@font/averia_sans_libre_light"
            android:text="Search"
            android:textColor="#2AFC98" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/backbutton2"
            android:fontFamily="@font/averia_sans_libre_light"
            android:text="Save"
            android:textColor="#2AFC98" />

    </LinearLayout>

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/averia_sans_libre_light"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollHorizontally="true"
        android:textColor="#EEE6E6"
        android:textSize="16sp" />
</LinearLayout>